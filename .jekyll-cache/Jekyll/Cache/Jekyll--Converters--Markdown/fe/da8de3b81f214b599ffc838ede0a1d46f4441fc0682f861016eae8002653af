            if(videoSize.width&gt;videoSize.height){
                playerModel.playerLayer.videoGravity = AVLayerVideoGravityResizeAspect;
            }else{
                playerModel.playerLayer.videoGravity = AVLayerVideoGravityResizeAspectFill;
